<div class="row">
    <div class="container">
        {{#if user.facebook}}
            <div class="well">
                <h2>
                    <a target="_blank" {{bind-attr href=user.facebook.uri}}>
                        Facebook <img class="thumbnail" {{bind-attr src=user.facebook.img}} height="50" width="50" />
                    </a>
                </h2>
            </div>
        {{/if}}

        {{#if user.github}}
            <div class="well">
                <h2>
                    <a target="_blank" {{bind-attr href=user.github.uri}}>
                        Github <img class="thumbnail" {{bind-attr src=user.github.img}}  height="50" width="50" />
                    </a></h2>
            </div>
        {{/if}}

        {{#if user.twitter}}
            <div class="well">
                <h2>
                    <a target="_blank" {{bind-attr href=user.twitter.uri}}>
                        Twitter <img class="thumbnail" {{bind-attr src=user.twitter.img}} height="50" width="50" />
                    </a>
                </h2>
            </div>
        {{/if}}
    </div>
</div>